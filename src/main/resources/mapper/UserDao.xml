<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.waynechu.topblog.dao.UserDao">
    <!--供查询全字段信息使用-->
    <sql id="userMsg">
        SELECT id,username,nickname,mobile,email FROM  t_user
    </sql>

    <!--统计-->
    <select id="count" resultType="cn.waynechu.topblog.entity.UserEntity">
        SELECT COUNT 1=1 FROM t_user
        <where>
           <if test="id!=null">
              AND  id=#{id}
           </if>
            <if test="username!=null and username!='' ">
              AND  username  LIKE CONCAT ('%',#{username},'%')
            </if>
            <if test="nickname!=null and nickname!=''">
              AND nikename LIKE  CONCAT ('%',#{nickename},'%')
            </if>
            <if test="mobile!=null and mobile!='' ">
                AND mobile LIKE CONCAT ('%',#{mobile},'%')
            </if>
            <if test="email!=null and email!='' ">
                AND email LIKE CONCAT ('%',#{email},'%')
            </if>
        </where>
    </select>

    <!--模糊查询-->
    <select id="select" resultType="cn.waynechu.topblog.entity.UserEntity">
        <include refid="userMsg"/>
        <where>
            <if test="id!=null">
                AND  id=#{id}
            </if>
            <if test="username!=null and username!='' ">
                AND  username  LIKE CONCAT ('%',#{username},'%')
            </if>
            <if test="nickname!=null and nickname!=''">
                AND nikename LIKE  CONCAT ('%',#{nickename},'%')
            </if>
            <if test="mobile!=null and mobile!='' ">
                AND mobile LIKE CONCAT ('%',#{mobile},'%')
            </if>
            <if test="email!=null and email!='' ">
                AND email LIKE CONCAT ('%',#{email},'%')
            </if>
        </where>
<!--        <if test="pageIndex >= 0 and pageSize >= 1">
            LIMIT #{pageIndex}, #{pageSize}
        </if>-->
    </select>
    <!--精确查询-->
    <select id="selectOne" resultType="cn.waynechu.topblog.entity.UserEntity">
        <include refid="userMsg"/>
        <where>
            <if test="id!=null">
                AND  id=#{id}
            </if>
            <if test="username!=null">
                AND  username =#{username}
            </if>
            <if test="nickname!=null">
                AND nikename =#{nickname}
            </if>
            <if test="mobile!=null">
                AND mobile =#{mobile}
            </if>
            <if test="email!=null">
                AND email=#{email}
            </if>
        </where>
    </select>

</mapper>
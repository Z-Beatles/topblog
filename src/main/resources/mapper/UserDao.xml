<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.waynechu.topblog.dao.UserDao">
	<select id="getByMobile" parameterType="String" resultType="UserEntity">
		select * from t_user where mobile=#{mobile}
	</select>

	<select id="getByEmail" parameterType="String" resultType="UserEntity">
		select * from t_user where email=#{email}
	</select>

	<select id="getByUsername" parameterType="String" resultType="UserEntity">
		select * from t_user where username=#{username}
	</select>

</mapper>
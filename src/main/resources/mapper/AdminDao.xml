<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.waynechu.topblog.dao.AdminDao">
	<select id="getByMobile" parameterType="String" resultType="AdminEntity">
		select * from t_admin where mobile=#{mobile}
	</select>

	<select id="getByEmail" parameterType="String" resultType="AdminEntity">
		select * from t_admin where email=#{email}
	</select>

	<select id="getByUsername" parameterType="String" resultType="AdminEntity">
		select * from t_admin where username=#{username}
	</select>

	<select id="getByLoginId" parameterType="long" resultType="AdminEntity">
		select a.* from t_admin a, t_user_login b where b.login_type='admin' and b.username=a.username and b.id=#{id}
	</select>
</mapper>